{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./be-dist",
    "rootDir": "./be-petfinder",
    "lib": ["ES2022"],
    "types": ["node"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["be-petfinder/**/*.ts"],
  "exclude": ["node_modules", "dist", "fe-petfinder", "be-dist"]
}
